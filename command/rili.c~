// calendar.app : test
// OnClouds'OS





#include "stdio.h"
#include "type.h"


int judge(int year,int month)
{
if(month==1||month==3||month==5||month==7||month==8||month==10||month==12)
return(1);
else if(month==2)
{
if(year%4!=0||year%100==0&&year%400!=0)
return(2);
else return(3);
}
else return(4);
}


int main(int argc, char* argv[])
{
int year,i,j,a,n,m,k;
char ** p;
char *week[]={"Sun","Mon","Tue","Wed","Thu","Fri","Sat"};
char*month[]={"January","February","March","April","May","June","July","August","September","October","November","December"};
/*printf("please inter the year:");
scanf("%d",&year);
printf("\n");*/
year = (argv[1][0] - '0') * 1000 + (argv[1][1] - '0') * 100 + (argv[1][2] - '0') * 10 + (argv[1][3] - '0') ;
printf("the calendar of the year%d.",year);
printf("\n");
a=(year+(year-1)/4-(year-1)/100+(year-1)/400)%7; for(i=0;i<12;i++)
{
n=judge(year,i+1);
p=month+i;
printf("%s\n",*p);
printf("\n");
for(j=0;j<7;j++)
{
p=week+j;
printf("%6s",*p);
}
printf("\n");
for(k=0;k<a;k++)
printf(" ");
for(m=1;m<32;m++)
{
printf("%6d",m);
if((a+m)%7==0)
printf("\n");
if(n==1&&m==31) break;
else if(n==2&&m==28) break;
else if(n==3&&m==29) break;
else if(n==4&&m==30) break;
}
a=(a+m)%7;
printf("\n");
printf("============================================"); printf("\n");
}
}





